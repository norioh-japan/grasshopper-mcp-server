{
  "GrasshopperMcp": {
    "Server": {
      "Host": "localhost",
      "Port": 5000,
      "EnableSecurity": true,
      "ApiKeys": ["demo-api-key-change-in-production"],
      "AllowedOrigins": ["http://localhost:3000", "https://claude.ai"]
    },
    "Grasshopper": {
      "AutoStartRhino": false,
      "RhinoPath": "C:\\Program Files\\Rhino 7\\System\\Rhino.exe",
      "MaxDefinitions": 10,
      "MaxExecutionTimeSeconds": 300
    },
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FilePath": "logs/grasshopper-mcp.log",
      "RollingInterval": "Day"
    }
  },
  "AllowedHosts": "*"
}
